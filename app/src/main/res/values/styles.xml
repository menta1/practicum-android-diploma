<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainHeadline">
        <item name="android:textSize">@dimen/main_headline_size</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="baseLineMedium">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="titleText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="baseText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="searchMessageText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="button" parent="baseLineMedium">
        <item name="android:backgroundTint">?attr/colorButtonNormal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <style name="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottom_nav_day</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceCaption</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceCaption</item>
        <item name="itemTextColor">@color/bottom_nav_day</item>
    </style>

    <style name="filterItemNotSelect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="editText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:backgroundTint">@color/light_grey</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="button_clear" parent="baseLineMedium">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ScreensBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="filterItemSelected" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="filterItemSelectedSmall" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="search_layout">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconCheckable">true</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/black</item>
        <item name="endIconDrawable">@drawable/ic_cross</item>
    </style>

    <style name="search_edit_text">
        <item name="android:autofillHints">""</item>
        <item name="android:background">@drawable/rounder_background</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="singleLine">true</item>
    </style>

</resources>