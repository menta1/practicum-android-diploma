<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_headline">
        <item name="android:textSize">@dimen/main_headline_size</item>
        <item name="fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="base_line_medium">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="title_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="base_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="enforceTextAppearance">true</item>
        <item name="enforceMaterialTheme">true</item>
        <item name="android:background">@color/black</item>
        <item name="itemIconTint">@color/bottom_nav_day</item>
        <item name="itemRippleColor">@color/black</item>
        <item name="itemTextAppearanceInactive">?attr/textAppearanceCaption</item>
        <item name="itemTextAppearanceActive">?attr/textAppearanceCaption</item>
        <item name="itemTextColor">@color/bottom_nav_day</item>
    </style>

    <style name="edit_text" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="button_clear" parent="base_line_medium">
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="screens_background">
        <item name="android:background">@color/black</item>
    </style>

    <style name="edit_text_normal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="filter_item_selected" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="filter_item_selected_small" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="search_edit_text">
        <item name="android:autofillHints">""</item>
        <item name="android:background">@drawable/rounder_background</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
        <item name="singleLine">true</item>
    </style>
</resources>